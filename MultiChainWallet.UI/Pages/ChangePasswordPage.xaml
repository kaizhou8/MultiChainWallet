<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MultiChainWallet.UI.Pages.ChangePasswordPage"
             Title="修改密码 / Change Password">
    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
            <Entry x:Name="CurrentPasswordEntry" 
                   IsPassword="True" 
                   Placeholder="当前密码 / Current Password" />

            <Entry x:Name="NewPasswordEntry" 
                   IsPassword="True" 
                   Placeholder="新密码 / New Password" />

            <Entry x:Name="ConfirmPasswordEntry" 
                   IsPassword="True" 
                   Placeholder="确认新密码 / Confirm New Password" />

            <Button x:Name="ChangePasswordButton"
                    Text="确认修改 / Confirm Change"
                    SemanticProperties.Hint="修改密码 / Change password"
                    Clicked="OnChangePasswordClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
