<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MultiChainWallet.UI.Pages.WalletTagsPage"
             Title="钱包标签管理 / Wallet Tags">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <!-- 搜索标签 / Search Tags -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,10">
            <Entry x:Name="TagSearchEntry" 
                   Placeholder="搜索标签... / Search tags..." 
                   Grid.Column="0"/>
            <Button Text="搜索 / Search" 
                    Grid.Column="1" 
                    Clicked="OnSearchTagClicked"
                    Margin="10,0,0,0"/>
        </Grid>

        <!-- 标签列表 / Tag List -->
        <RefreshView Grid.Row="1" 
                     x:Name="TagsRefreshView"
                     IsRefreshing="False"
                     Command="{Binding RefreshCommand}">
            <CollectionView x:Name="TagsCollection">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5" Padding="10">
                            <Grid ColumnDefinitions="*,Auto,Auto">
                                <Label Grid.Column="0" 
                                       Text="{Binding Name}" 
                                       VerticalOptions="Center"/>
                                <Label Grid.Column="1" 
                                       Text="{Binding WalletCount, StringFormat='钱包数: {0} / Count: {0}'}" 
                                       VerticalOptions="Center"
                                       Margin="10,0"/>
                                <Button Grid.Column="2" 
                                        Text="查看 / View" 
                                        Clicked="OnViewTagClicked"
                                        CommandParameter="{Binding Name}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- 底部按钮 / Bottom Buttons -->
        <Button Grid.Row="2" 
                Text="刷新 / Refresh" 
                Clicked="OnRefreshClicked"
                Margin="0,10,0,0"/>
    </Grid>
</ContentPage>
