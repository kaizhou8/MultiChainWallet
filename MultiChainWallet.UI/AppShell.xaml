<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MultiChainWallet.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MultiChainWallet.UI"
    xmlns:pages="clr-namespace:MultiChainWallet.UI.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="MultiChainWallet.UI">

    <Shell.FlyoutHeader>
        <Grid HeightRequest="100" BackgroundColor="{StaticResource Primary}">
            <Label Text="多链钱包 / Multi-Chain Wallet"
                   TextColor="White"
                   FontSize="24"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="钱包 / Wallets" Icon="wallet_icon.png">
        <ShellContent ContentTemplate="{DataTemplate pages:WalletListPage}" />
    </FlyoutItem>

    <FlyoutItem Title="代币 / Tokens" Icon="token_icon.png">
        <ShellContent ContentTemplate="{DataTemplate pages:TokenListPage}" />
    </FlyoutItem>

    <FlyoutItem Title="交易历史 / History" Icon="history_icon.png">
        <ShellContent ContentTemplate="{DataTemplate pages:TransactionHistoryPage}" />
    </FlyoutItem>

    <FlyoutItem Title="市场数据 / Market Data" Icon="chart.png">
        <ShellContent ContentTemplate="{DataTemplate pages:MarketDataPage}" />
    </FlyoutItem>
    
    <FlyoutItem Title="硬件钱包 / Hardware Wallet" Icon="hardware_wallet.png">
        <Tab Title="连接 / Connect">
            <ShellContent ContentTemplate="{DataTemplate pages:HardwareWalletConnectionPage}" />
        </Tab>
        <Tab Title="地址 / Addresses">
            <ShellContent ContentTemplate="{DataTemplate pages:HardwareWalletAddressPage}" />
        </Tab>
        <Tab Title="交易 / Transactions">
            <ShellContent ContentTemplate="{DataTemplate pages:HardwareWalletTransactionPage}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="设置 / Settings" Icon="settings_icon.png">
        <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </FlyoutItem>

</Shell>
